<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/nameCard_making_image_choose"
        android:layout_width="380dp"
        android:layout_height="175dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/nameCard_making_Et_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="이름"
        app:layout_constraintTop_toBottomOf="@id/nameCard_making_image_choose"
        app:layout_constraintStart_toStartOf="@id/nameCard_making_image_choose"
        app:layout_constraintEnd_toStartOf="@+id/nameCard_making_Et_office" />

    <EditText
        android:id="@+id/nameCard_making_Et_office"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="회사"
        app:layout_constraintTop_toBottomOf="@id/nameCard_making_image_choose"
        app:layout_constraintStart_toEndOf="@id/nameCard_making_Et_name"
        app:layout_constraintEnd_toStartOf="@+id/nameCard_making_Et_position" />

    <EditText
        android:id="@+id/nameCard_making_Et_position"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="직급"
        app:layout_constraintTop_toBottomOf="@id/nameCard_making_image_choose"
        app:layout_constraintStart_toEndOf="@id/nameCard_making_Et_office"
        app:layout_constraintEnd_toStartOf="@+id/nameCard_making_Et_phone" />

    <EditText
        android:id="@+id/nameCard_making_Et_phone"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="전화번호"
        app:layout_constraintTop_toBottomOf="@id/nameCard_making_image_choose"
        app:layout_constraintStart_toEndOf="@id/nameCard_making_Et_position"
        app:layout_constraintEnd_toStartOf="@+id/nameCard_making_Et_email" />

    <EditText
        android:id="@+id/nameCard_making_Et_email"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="이메일"
        app:layout_constraintTop_toBottomOf="@id/nameCard_making_image_choose"
        app:layout_constraintStart_toEndOf="@id/nameCard_making_Et_phone"
        app:layout_constraintEnd_toStartOf="@+id/nameCard_making_Et_address" />

    <EditText
        android:id="@+id/nameCard_making_Et_address"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="주소"
        app:layout_constraintTop_toBottomOf="@id/nameCard_making_image_choose"
        app:layout_constraintStart_toEndOf="@id/nameCard_making_Et_email"
        app:layout_constraintEnd_toEndOf="@id/nameCard_making_image_choose" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_width="400dp"
        android:layout_height="256dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/nameCard_making_Et_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/nameCard_making_image_make"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nameCard_making_Button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_coners_button"
        android:text="완성하기"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/constraint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
